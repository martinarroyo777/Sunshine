<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/key_location"
        android:title="@string/title_location"
        android:defaultValue="@string/default_val_location"
        android:inputType="text"
        android:persistent="true"
        android:singleLine="true"/>
    <ListPreference
        android:key="@string/key_units"
        android:title="@string/title_units"
        android:defaultValue="@string/default_val_units"
        android:entries="@array/readable_units"
        android:entryValues="@array/values_units"/>

</PreferenceScreen>
